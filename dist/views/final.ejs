<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grow Support</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">


    <style>
        .create-board-bg {
            width: 100%;
            background-repeat: repeat;
            background-size: cover;
            flex-wrap: wrap;
            margin-top: calc(var(--bs-gutter-y) * -1);
        }

        p {
            margin-top: 0px;
        }



        .preview-title-label {
            background: #EF8F48;
            border-radius: 0px;
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin-right: 0px;
            margin-bottom: 6px;
            cursor: pointer;
        }

        .card {

            border-radius: 0px;
            height: 90px;
        }

        .preview-common-board-label {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            cursor: pointer;
            height: 100%
        }

        .preview-common-board-label p {
            color: #FFFFFF;
            font-family: 'Roboto', sans-serif;
            margin-bottom: 0;
            text-align: center;
        }

        .box_hidden {
            visibility: hidden;
        }

        .cs_col {
            padding: 0px 1px 1px 1px;
        }

        .preview-board-area .row {
            margin-left: -3px !important;
            margin-right: -3px !important;
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
        }

        .preview-board-area .row > div {
            margin: 1px;
        }

        .preview-board-area {
            padding: 50px;
            width: 4068px;
            height: 4068px;
        }

        .common-board {
            display: grid;
            grid-template-columns: repeat(30, minmax(0px, 1fr));
        }

        .cs_col {
            grid-column: span 3 / span 3;
        }
    </style>
</head>

<body class="create-board-bg" style="background: <%= data.background %>">

    <section class="">
        <div class="">
            <div class="board-area preview-board-area">
                <% for(var i=0; i < data.boardRows.length; i++) { %>
                    <div class="common-board row">
                        <% let cardIds=data.boardRows[i].card_ids %>
                            <% for(var j=0; j < cardIds.length; j++) { %>
                                <% let card=data.boardCards[cardIds[j]] %>
                                    <div class="card" style="grid-column: span <%= card.colspan %> / span <%= card.colspan %> ;">
                                        <% if(card.has_data) { %>
                                            <div class="preview-common-board-label"
                                                style="background: rgba(<%= data.hexToRGB(card.color) %>, <%= card.opacity %>);">
                                                <p style="font-size : <%= card.title_font_size %>px; font-weight : <%= card.is_title_bold ? "bold" : "normal" %>; font-style : <%= card.is_title_italic ? "italic" : "normal" %>"><%= card.title %>
                                                </p>
                                                <p style="font-size : <%= card.body_font_size %>px; font-weight : <%= card.is_body_bold ? "bold" : "normal" %>; font-style : <%= card.is_body_italic ? "italic": "normal" %>"><%= card.body %>
                                                </p>
                                            </div>
                                        <% } %>
                                    </div>
                                    <% } %>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

</body>

</html>