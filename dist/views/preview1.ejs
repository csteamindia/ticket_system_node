<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grow Planner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <!-- <link rel="stylesheet" href="./assets/css/style.css"> -->
    <!-- <link rel="stylesheet" href="./assets/css/responsive.css"> -->


    <style>
        .create-board-bg {
            width: 100%;
            background-repeat: repeat;
            background-size: cover;
        }

        .red-board {
            background-color: #E74E4E;
        }

        .preview-title-label {

            box-shadow: 0px 8px 172px rgb(42 48 66 / 10%);
            border-radius: 0px;

            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin-right: 0px;

            cursor: pointer;
        }

        .preview-common-board-label {
            box-shadow: 0px 8px 172px rgb(42 48 66 / 10%);
            border-radius: 0px;
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            cursor: pointer;
        }

        .preview-common-board-label p,
        .preview-title-label p {
            color: #FFFFFF;
            font-family: 'Roboto', sans-serif;
            margin-bottom: 0;
            text-align: center;

        }

        .box_hidden {
            visibility: hidden;
        }

        .cs_col {
            padding: 1px;
        }

        .preview-board-area .row {
            margin-left: -3px !important;
            margin-right: -3px !important;
        }

        .preview-board-area {
            padding: 50px;
            width: 4068px;
            height: 4068px;
        }
    </style>
</head>



<body class="create-board-bg" style="background: <%= data.background %>">
    <section class="">
        <div class="">
            <div class="board-area preview-board-area">
                <% for(var i=0; i < data.boardRows.length; i++) { %>
                    <div class="title-box row">
                        <% let cardIds=data.boardRows[i].card_ids %>
                            <% for(var j=0; j < cardIds.length; j++) { %>
                                <% let card=data.boardCards[cardIds[j]] %>
                                    <div class="cs_col col-<%= card.colspan %>">
                                        <% if(card.has_data) { %>
                                            <div class="preview-title-label"
                                                style="background: rgba(<%= data.hexToRGB(card.color) %>, <%= card.opacity %>);">
                                                <p style="font-size : <%= card.title_font_size %>px; font-weight : <%= card.is_title_bold ? "
                                                    bold" : "normal" %>; font-style : <%= card.is_title_italic
                                                        ? "italic" : "normal" %>"><%= card.title %>
                                                </p>
                                                <p style="font-size : <%= card.body_font_size %>px; font-weight : <%= card.is_body_bold ? "
                                                    bold" : "normal" %>; font-style : <%= card.is_body_italic ? "italic"
                                                        : "normal" %>"><%= card.body %>
                                                </p>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

</body>

</html>